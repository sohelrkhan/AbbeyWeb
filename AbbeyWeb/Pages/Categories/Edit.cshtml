@page
@model AbbeyWeb.Pages.Categories.EditModel


<form method="post">
    <div class="border p-3 m-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
             <hr />
        </div>*@
       
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>

        </div>

        <button type="submit" class="btn btn-primary" style="width:150px"><i class="bi bi-archive"></i>Edit</button>
        <a asp-page="Index" class="btn btn-primary" style="width:150px"><i class="bi bi-arrow-left"></i>Back to List</a>
    </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial"/> }
}